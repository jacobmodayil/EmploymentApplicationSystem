<h1>Open Jobs</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
          <td><%= link_to job.title, pages_applicant_show_job_path(:job_id => job.id), class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
